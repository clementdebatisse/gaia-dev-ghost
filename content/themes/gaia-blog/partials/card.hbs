<article class="ppt-card {{#unless feature_image}}no-picture{{/unless}}">
  <div class="bg">
    {{#if feature_image}}
      <style>
        #featured-bg-{{id}} {
          background-image: url({{img_url feature_image size='l'}});
        }

        @media(max-width: 768px) {
          #featured-bg-{{id}} {
            background-image: url({{img_url feature_image size='m'}});
          }
        }
      </style>
      <div id="featured-bg-{{id}}"></div>
    {{/if}}

    {{#unless feature_image}}
      <style>
        #featured-bg-{{id}} {
          background-image: url("/assets/images/placeholder-card.jpg");
        }
      </style>
      <div id="featured-bg-{{id}}"></div>
    {{/unless}}
  </div>
